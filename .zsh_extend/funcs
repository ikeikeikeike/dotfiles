# ssh screen name
function ssh_screen(){
    server=?${$#}
    screen -t ${@}${server} ssh ${@}
}
function ssh_tmux(){
    server=?${$#}
    tmux new-window -n ${@}${server} "ssh ${@}"
}

# tmux screen 判別
# if [ x$TERM = xscreen ]; then
    if [ -e $TMUX ]; then
        alias ssh=ssh_screen
    else
        alias ssh=ssh_tmux
    fi
# fi

source $HOME/.zsh_extend/emacs/isemacs.sh

