vimR () {
    echo -n "vim -c ':argdo %s/no-example/just-sample/g | update' **/*.go" > /dev/null
    echo -n "vim -c ':argdo %s/no-example/just-sample/gce | update' **/*.go" > /dev/null

    echo "vim -c ':argdo $1 | update' $2"
    vim -c ":argdo $1 | update" $2
}

